<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/planetas"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_weight="1">
        <ImageView
            android:src="@drawable/dagobah"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />
        <TextView
            android:text="Planetas"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dip"
            android:layout_alignParentBottom="true"
            android:background="#AA000000"
            android:padding="12dip"
            android:textColor="#ffffffff" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/personajes"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_weight="1">
        <ImageView
            android:src="@drawable/luke"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />
        <TextView
            android:text="Personajes"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dip"
            android:layout_alignParentBottom="true"
            android:background="#AA000000"
            android:padding="12dip"
            android:textColor="#ffffffff" />
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/naves"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_weight="1">
            <ImageView
                android:src="@drawable/halcon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />
            <TextView
                android:text="Naves"
                android:textSize="20dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dip"
                android:layout_alignParentBottom="true"
                android:background="#AA000000"
                android:padding="12dip"
                android:textColor="#ffffffff" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/peliculas"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_weight="1">
            <ImageView
                android:src="@drawable/episodio3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />
            <TextView
                android:text="Peliculas"
                android:textSize="20dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dip"
                android:layout_alignParentBottom="true"
                android:background="#AA000000"
                android:padding="12dip"
                android:textColor="#ffffffff" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/vehiculos"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_weight="1">
            <ImageView
                android:src="@drawable/atat"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />
            <TextView
                android:text="Vehiculos"
                android:textSize="20dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dip"
                android:layout_alignParentBottom="true"
                android:background="#AA000000"
                android:padding="12dip"
                android:textColor="#ffffffff" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/especies"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_weight="1">
            <ImageView
                android:src="@drawable/ahsoka"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />
            <TextView
                android:text="Especies"
                android:textSize="20dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dip"
                android:layout_alignParentBottom="true"
                android:background="#AA000000"
                android:padding="12dip"
                android:textColor="#ffffffff" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

